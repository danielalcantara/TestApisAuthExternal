	public void savePagamento(PagamentoModel pagamentoModel) throws Exception {
		
		Integer idPagamento = getIdPagamento();

		jdbcTemplate.update(env.getProperty("INSERT_TABLE_PAGAMENTO"),
			new Object[] { 
				idPagamento,
				pagamentoModel.getNumeroContrato(),
				pagamentoModel.getDataPagamento(),
			}
		);
		
	}
	
	public Integer getIdPagamento() {
		return jdbcTemplate.query(env.getProperty("GET_ID_PAGAMENTO"), new ResultSetExtractor<Integer>(){
			@Override
			public Integer extractData(ResultSet rs) throws SQLException, DataAccessException {
				Integer result =  null;
				if (rs.next())
					result = rs.getInt(1);
				return result;
			}
		});
	}

